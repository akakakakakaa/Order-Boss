<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/reservationToolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#F8F8F8"
        android:theme="?attr/actionBarTheme"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetEnd="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/reservationBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_back"
                android:tint="#888888"
                android:background="@null"
                android:layout_marginLeft="19dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="19dp" />
            <TextView
                android:id="@+id/reservationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="장바구니"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:background="#11000000"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservationName"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reservationToolbar"
        app:layout_constraintRight_toRightOf="parent">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/reservationRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:padding="15dp"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />
            <android.support.constraint.ConstraintLayout
                android:id="@+id/reservationPriceWrapper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                android:layout_marginBottom="29dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="13dp"
                android:paddingRight="15dp"
                android:background="@drawable/activity_basket_total_price"
                app:layout_constraintTop_toBottomOf="@+id/reservationRecyclerView"
                app:layout_constraintRight_toRightOf="parent">
                <TextView
                    android:id="@+id/reservationTotalPriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="총금액 ..."
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/reservationTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:textSize="21sp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/reservationTotalPriceText"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <TextView
                    android:id="@+id/reservationTotalPriceOneText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="원"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    app:layout_constraintLeft_toRightOf="@+id/reservationTotalPrice"
                    app:layout_constraintBottom_toBottomOf="@+id/reservationTotalPrice"/>
            </android.support.constraint.ConstraintLayout>
            <View
                android:id="@+id/reservationDivider"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:background="#E6E6E6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservationPriceWrapper"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/reservationPersonnelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="14dp"
                android:text="예약인원"
                android:textSize="18sp"
                android:textColor="#95989A"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservationDivider"/>
            <Button
                android:id="@+id/reservationPersonnelButtonOne"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="1명"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:background="@drawable/cardview_reservation_personnel_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservationPersonnelText"
                app:layout_constraintRight_toRightOf="parent"/>
            <Button
                android:id="@+id/reservationPersonnelButtonTakeOut"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Take Out"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:background="@drawable/cardview_reservation_personnel_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservationPersonnelText"
                app:layout_constraintRight_toLeftOf="@+id/reservationPersonnelButtonOne"/>
            <Button
                android:id="@+id/reservationPersonnelButtonTwo"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="2명"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:background="@drawable/cardview_reservation_personnel_button"
                app:layout_constraintLeft_toRightOf="@+id/reservationPersonnelButtonOne"
                app:layout_constraintTop_toBottomOf="@+id/reservationPersonnelText"
                app:layout_constraintRight_toRightOf="parent"/>
            <Button
                android:id="@+id/reservationPersonnelButtonFour"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="4명"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:background="@drawable/cardview_reservation_personnel_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservationPersonnelButtonOne"
                app:layout_constraintRight_toRightOf="parent"/>
            <Button
                android:id="@+id/reservationPersonnelButtonThree"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="3명"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:background="@drawable/cardview_reservation_personnel_button"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservationPersonnelButtonOne"
                app:layout_constraintRight_toLeftOf="@+id/reservationPersonnelButtonFour"/>
            <Button
                android:id="@+id/reservationPersonnelButtonChooseNum"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="직접 입력"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:background="@drawable/cardview_reservation_personnel_button"
                app:layout_constraintLeft_toRightOf="@+id/reservationPersonnelButtonFour"
                app:layout_constraintTop_toBottomOf="@+id/reservationPersonnelButtonOne"
                app:layout_constraintRight_toRightOf="parent"/>
            <View
                android:id="@+id/reservationDivider2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="20dp"
                android:background="#E6E6E6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservationPersonnelButtonFour"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:id="@+id/reservationAgreeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="29dp"
                android:text="예약 후 대기 15분 이전부터는 취소가 불가능합니다."
                android:textSize="18sp"
                android:textColor="@android:color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservationDivider2"/>
            <CheckBox
                android:id="@+id/reservationAgreeCheckBox"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동의하십니까?"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservationAgreeText"/>
            <View
                android:id="@+id/reservationDivider3"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="30dp"
                android:background="#E6E6E6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservationAgreeCheckBox"
                app:layout_constraintRight_toRightOf="parent"/>
            <EditText
                android:id="@+id/reservationWriteContent"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="70dp"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:gravity="top|left"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:hint="사장님께 부탁드릴 내용을 적어주세요."
                android:textColorHint="#95989A"
                android:background="@drawable/edittext_reservation_write_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reservationDivider3"
                app:layout_constraintRight_toRightOf="parent" />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
    <Button
        android:id="@+id/reservationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="예약하기"
        android:textSize="19sp"
        android:textColor="@android:color/white"
        android:background="#FFC27B"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>