<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/restaurantMenuChooseBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44000000"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="345dp"
        android:layout_height="262dp"
        android:background="@drawable/popup_restaurant_menu_choose"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
            android:id="@+id/restaurantMenuChooseWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:background="@drawable/popup_restaurant_menu_choose_top">
            <TextView
                android:id="@+id/restaurantMenuChooseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:text="메뉴 선택"
                android:textSize="22dp"
                android:textColor="@android:color/black"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageView
                android:id="@+id/restaurantMenuChooseImg"
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="13dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/restaurantMenuChooseText"/>
            <TextView
                android:id="@+id/restaurantMenuChooseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="소세지또띠아"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                app:layout_constraintLeft_toRightOf="@+id/restaurantMenuChooseImg"
                app:layout_constraintTop_toBottomOf="@+id/restaurantMenuChooseImg"
                app:layout_constraintBottom_toTopOf="@+id/restaurantMenuChooseImg"/>
            <TextView
                android:id="@+id/restaurantMenuChoosePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:text="15000원"
                android:textSize="18sp"
                android:textColor="#FC9113"
                app:layout_constraintTop_toBottomOf="@+id/restaurantMenuChooseName"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/restaurantMenuChooseName"/>
            <TextView
                android:id="@+id/restaurantMenuChooseNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="1개"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@+id/restaurantMenuChooseAdd"
                app:layout_constraintRight_toLeftOf="@+id/restaurantMenuChooseAdd"
                app:layout_constraintBottom_toTopOf="@+id/restaurantMenuChooseAdd"/>
            <ImageButton
                android:id="@+id/restaurantMenuChooseAdd"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/icon_add"
                android:background="@null"
                app:layout_constraintTop_toBottomOf="@+id/restaurantMenuChooseSubtraction"
                app:layout_constraintRight_toLeftOf="@+id/restaurantMenuChooseSubtraction"
                app:layout_constraintBottom_toTopOf="@+id/restaurantMenuChooseSubtraction"/>
            <ImageButton
                android:id="@+id/restaurantMenuChooseSubtraction"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/icon_subtraction"
                android:background="@null"
                app:layout_constraintTop_toBottomOf="@+id/restaurantMenuChooseImg"
                app:layout_constraintRight_toRightOf="parent"/>
        </android.support.constraint.ConstraintLayout>
        <Button
            android:id="@+id/restaurantMenuChooseAddToBasketButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:background="@null"
            android:text="장바구니에 추가"
            android:textSize="19sp"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restaurantMenuChooseWrapper"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>