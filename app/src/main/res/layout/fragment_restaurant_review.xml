<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/restaurantReviewIcon"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="35dp"
        android:src="@drawable/icon_review_first"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/restaurantReviewReviewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="리뷰"
        android:textSize="20sp"
        android:textColor="#95989A"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantReviewIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/restaurantReviewIcon"/>
    <TextView
        android:id="@+id/restaurantReviewReservationNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:text="누적 예약 수"
        android:textSize="20sp"
        android:textColor="#95989A"
        app:layout_constraintTop_toBottomOf="@+id/restaurantReviewReviewText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/restaurantReviewReviewText"/>

    <TextView
        android:id="@+id/restaurantReviewGrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.8"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintLeft_toLeftOf="@+id/restaurantReviewIcon"
        app:layout_constraintTop_toBottomOf="@+id/restaurantReviewIcon"
        app:layout_constraintRight_toRightOf="@+id/restaurantReviewIcon"/>
    <TextView
        android:id="@+id/restaurantReviewNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantReviewGrade"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/restaurantReviewGrade"/>
    <TextView
        android:id="@+id/restaurantReviewReservationAccumNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100+"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/restaurantReviewReservationNum"
        app:layout_constraintTop_toBottomOf="@+id/restaurantReviewNum"
        app:layout_constraintRight_toRightOf="@+id/restaurantReviewReservationNum"
        app:layout_constraintBottom_toTopOf="@+id/restaurantReviewNum"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/restaurantReviewRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantReviewNum"
        app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>