<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="157dp"
    android:layout_marginBottom="5dp">
    <ImageView
        android:id="@+id/searchResultImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />
    <View
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/cardview_restaurant_list_gradient"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/searchResultName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/searchResultFoodTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@+id/searchResultName"
        app:layout_constraintTop_toTopOf="@+id/searchResultName"
        app:layout_constraintBottom_toBottomOf="@+id/searchResultName"/>
    <TextView
        android:id="@+id/searchResultDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="13dp"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/searchResultName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/searchResultName" />

    <ImageButton
        android:id="@+id/searchResultLikeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/icon_heart"
        android:background="@null"
        android:tint="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchResultName"
        app:layout_constraintBottom_toBottomOf="parent" />
    <TextView
        android:id="@+id/searchResultLikeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/searchResultLikeButton"
        app:layout_constraintTop_toTopOf="@+id/searchResultLikeButton"
        app:layout_constraintBottom_toBottomOf="@+id/searchResultLikeButton"/>
    <ImageButton
        android:id="@+id/searchResultReviewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/icon_review"
        android:background="@null"
        android:tint="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/searchResultLikeNumber"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/searchResultReviewNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/searchResultReviewButton"
        app:layout_constraintTop_toTopOf="@+id/searchResultReviewButton"
        app:layout_constraintBottom_toBottomOf="@+id/searchResultReviewButton"/>
    <ImageButton
        android:id="@+id/searchResultScrapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/icon_scrap"
        android:background="@null"
        android:tint="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/searchResultReviewNumber"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/searchResultScrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:text="스크랩하기"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toRightOf="@+id/searchResultScrapButton"
        app:layout_constraintTop_toTopOf="@+id/searchResultScrapButton"
        app:layout_constraintBottom_toBottomOf="@+id/searchResultScrapButton"/>
    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/searchResultRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:isIndicator="true"
        android:numStars="5"
        android:rating="4"
        android:stepSize="0.1"
        android:theme="@style/RatingBar2"
        style="?attr/ratingBarStyleSmall"
        app:layout_constraintTop_toBottomOf="@+id/searchResultScrap"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/searchResultScrap"/>
</android.support.constraint.ConstraintLayout>